<p id="notice"><%= notice %></p>

<h1>Work Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Role</th>
      <th>Shift type</th>
      <th>Time slot 1</th>
      <th>Time slot 2</th>
      <th>Total hours</th>
      <th>Amount</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_schedules.each do |work_schedule| %>
      <tr>
        <td><%= work_schedule.start_date %></td>
        <td><%= work_schedule.location %></td>
        <td><%= work_schedule.role %></td>
        <td><%= work_schedule.shift_type %></td>
        <td><%= work_schedule.time_slot_1 %></td>
        <td><%= work_schedule.time_slot_2 %></td>
        <td><%= work_schedule.total_hours %></td>
        <td><%= work_schedule.amount %></td>
        <td><%= work_schedule.user_id %></td>
        <td><%= link_to 'Show', work_schedule %></td>
        <td><%= link_to 'Edit', edit_work_schedule_path(work_schedule) %></td>
        <td><%= link_to 'Destroy', work_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work Schedule', new_work_schedule_path %>
