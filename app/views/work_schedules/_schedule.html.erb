<div class="col-md-4"></div>
<div class="schedule col-md-4">
  <div class="row">
    <div class="col-md-4">
      Date
    </div>
    <div class="col-md-8">
      <%= schedule.start_date.try(:to_date) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Location
    </div>
    <div class="col-md-8">
      <%= schedule.location %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Role
    </div>
    <div class="col-md-8">
      <%= schedule.role %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Shift type
    </div>
    <div class="col-md-8">
      <%= schedule.shift_type %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Time slot 1
    </div>
    <div class="col-md-8">
      <%= schedule.time_slot_1 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Time slot 2
    </div>
    <div class="col-md-8">
      <%= schedule.time_slot_2 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Total hours
    </div>
    <div class="col-md-8">
      <%= schedule.total_hours %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      Amount
    </div>
    <div class="col-md-8">
      <%= schedule.amount %> $
    </div>
  </div>
  <% if current_user.is_admin? %>
    <div class="row">
      <div class="col-md-4">
        User
      </div>
      <div class="col-md-8">
        <%= schedule.user.name %>
      </div>
      <div class="col-md-4">
        <%= link_to 'Edit', edit_work_schedule_path(schedule) %> |
        <%= link_to 'Back', work_schedules_path %>
      </div>
    </div>
  <% end %>
</div>
